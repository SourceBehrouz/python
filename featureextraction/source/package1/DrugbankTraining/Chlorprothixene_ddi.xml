    <sentence id="DDI-DrugBank.d503.s0" text="Chlorprothixene may increase the plasma-level of concomitantly given lithium.">
        <entity charOffset="0-14" id="DDI-DrugBank.d503.s0.e0" text="Chlorprothixene" type="drug"/>
        <entity charOffset="69-75" id="DDI-DrugBank.d503.s0.e1" text="lithium" type="drug"/>
        <pair ddi="true" e1="DDI-DrugBank.d503.s0.e0" e2="DDI-DrugBank.d503.s0.e1" id="DDI-DrugBank.d503.s0.p0" type="mechanism"/>
    </sentence>
    <sentence id="DDI-DrugBank.d503.s1" text="In order to avoid lithium intoxication, lithium plasma levels should be monitored closely.">
        <entity charOffset="18-24" id="DDI-DrugBank.d503.s1.e0" text="lithium" type="drug"/>
        <entity charOffset="40-46" id="DDI-DrugBank.d503.s1.e1" text="lithium" type="drug"/>
        <pair ddi="false" e1="DDI-DrugBank.d503.s1.e0" e2="DDI-DrugBank.d503.s1.e1" id="DDI-DrugBank.d503.s1.p0"/>
    </sentence>
    <sentence id="DDI-DrugBank.d503.s2" text="If chlorprothixene is given concomitantly with opioids, the opioid dose should be reduced (by approx. 50%), because chlorprothixene amplifies the therapeutic actions and side-effects of opioids massively.">
        <entity charOffset="3-17" id="DDI-DrugBank.d503.s2.e0" text="chlorprothixene" type="drug"/>
        <entity charOffset="47-53" id="DDI-DrugBank.d503.s2.e1" text="opioids" type="group"/>
