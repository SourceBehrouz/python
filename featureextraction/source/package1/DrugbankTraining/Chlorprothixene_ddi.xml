    </sentence>
    <sentence id="DDI-DrugBank.d503.s3" text="Avoid the concomitant use of chlorprothixene and tramadol (Ultram).">
        <entity charOffset="29-43" id="DDI-DrugBank.d503.s3.e0" text="chlorprothixene" type="drug"/>
        <entity charOffset="49-56" id="DDI-DrugBank.d503.s3.e1" text="tramadol" type="drug"/>
        <entity charOffset="59-64" id="DDI-DrugBank.d503.s3.e2" text="Ultram" type="brand"/>
