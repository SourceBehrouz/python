    </sentence>
    <sentence id="DDI-DrugBank.d503.s4" text="Massive seizures may be encountered with this combination."/>
    <sentence id="DDI-DrugBank.d503.s5" text="Consider additive sedative effects and confusional states to emerge, if chlorprothixene is given with benzodiazepines or barbituates.">
        <entity charOffset="72-86" id="DDI-DrugBank.d503.s5.e0" text="chlorprothixene" type="drug"/>
        <entity charOffset="102-116" id="DDI-DrugBank.d503.s5.e1" text="benzodiazepines" type="group"/>
        <entity charOffset="121-131" id="DDI-DrugBank.d503.s5.e2" text="barbituates" type="group"/>
        <pair ddi="true" e1="DDI-DrugBank.d503.s5.e0" e2="DDI-DrugBank.d503.s5.e1" id="DDI-DrugBank.d503.s5.p0" type="effect"/>
