        <entity charOffset="150-153;187-195" id="DDI-DrugBank.d356.s4.e1" text="loop diuretics" type="group"/>
        <entity charOffset="156-172;187-195" id="DDI-DrugBank.d356.s4.e2" text="potassium-sparing diuretics" type="group"/>
        <entity charOffset="178-195" id="DDI-DrugBank.d356.s4.e3" text="thiazide diuretics" type="group"/>
